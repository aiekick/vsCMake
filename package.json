    "menus": {
      "view/title": [
        {
          "command":"vsCMake.selectBuildDir",
          "when": "view == vsCMakeStatus",
          "group": "navigation@1"
        },
        {
          "command": "vsCMake.configure",
          "when": "view == vsCMakeStatus",
          "group": "navigation@2"
        },
        {
          "command": "vsCMake.deleteCacheAndReconfigure",
          "when": "view == vsCMakeStatus",
          "group": "navigation@3"
        },
        {
          "command": "vsCMake.refresh",
          "when": "view == vsCMakeStatus",
          "group": "navigation@4"
        },
        {
          "command": "vsCMake.openSettings",
          "when": "view == vsCMakeStatus",
          "group": "navigation@5"
        },
        {
          "command": "vsCMake.filterOutline",
          "when": "view == vsCMakeOutline",
          "group": "navigation@1"
        },
        {
          "command": "vsCMake.clearFilterOutline",
          "when": "view == vsCMakeOutline && vsCMake.outlineFilterActive",
          "group": "navigation@2"
        },
        {
          "command": "vsCMake.expandAllOutline",
          "when": "view == vsCMakeOutline",
          "group": "navigation@3"
        },
        {
          "command": "vsCMake.refreshOutline",
          "when": "view == vsCMakeOutline",
          "group": "navigation@4"
        },
        {
          "command": "vsCMake.filterConfig",
          "when": "view == vsCMakeConfig",
          "group": "navigation@1"
        },
        {
          "command": "vsCMake.clearFilterConfig",
          "when": "view == vsCMakeConfig && vsCMake.configFilterActive",
          "group": "navigation@2"
        },
        {
          "command": "vsCMake.collapseAllConfig",
          "when": "view == vsCMakeConfig",
          "group": "navigation@3"
        },
        {
          "command": "vsCMake.expandAllConfig",
          "when": "view == vsCMakeConfig",
          "group": "navigation@4"
        },
        {
          "command": "vsCMake.refreshConfig",
          "when": "view == vsCMakeConfig",
          "group": "navigation@5"
        },
        {
          "command": "vsCMake.filterImpacted",
          "when": "view == vsCMakeImpacted",
          "group": "navigation@1"
        },
        {
          "command": "vsCMake.clearFilterImpacted",
          "when": "view == vsCMakeImpacted && vsCMake.impactedFilterActive",
          "group": "navigation@2"
        },
        {
          "command": "vsCMake.expandAllImpacted",
          "when": "view == vsCMakeImpacted",
          "group": "navigation@3"
        },
        {
          "command": "vsCMake.collapseAllImpacted",
          "when": "view == vsCMakeImpacted",
          "group": "navigation@4"
        },
        {
          "command": "vsCMake.refreshImpacted",
          "when": "view == vsCMakeImpacted",
          "group": "navigation@5"
        }
      ],
      "view/item/context": [
        {
          "command": "vsCMake.selectBuildDir",
          "when": "view == vsCMakeStatus && viewItem == statusSection_folder",
          "group": "inline@1"
        },
        {
          "command": "vsCMake.pick_folder",
          "when": "view == vsCMakeStatus && viewItem == statusValue_folder",
          "group": "inline@1"
        },
        {
          "command": "vsCMake.pick_configChoice",
          "when": "view == vsCMakeStatus && viewItem == statusValue_configChoice",
          "group": "inline@1"
        },
        {
          "command": "vsCMake.configure",
          "when": "view == vsCMakeStatus && viewItem == statusSection_configure",
          "group": "inline@1"
        },
        {
          "command": "vsCMake.pick_configure",
          "when": "view == vsCMakeStatus && viewItem == statusValue_configure",
          "group": "inline@1"
        },
        {
          "command": "vsCMake.build",
          "when": "view == vsCMakeStatus && viewItem == statusSection_build",
          "group": "inline@1"
        },
        {
          "command": "vsCMake.clean",
          "when": "view == vsCMakeStatus && viewItem == statusSection_build",
          "group": "inline@2"
        },
        {
          "command": "vsCMake.pick_buildConfig",
          "when": "view == vsCMakeStatus && viewItem == statusValue_buildConfig",
          "group": "inline@1"
        },
        {
          "command": "vsCMake.pick_build",
          "when": "view == vsCMakeStatus && viewItem == statusValue_build",
          "group": "inline@1"
        },
        {
          "command": "vsCMake.pick_buildTarget",
          "when": "view == vsCMakeStatus && viewItem == statusValue_buildTarget",
          "group": "inline@1"
        },
        {
          "command": "vsCMake.pick_buildJobs",
          "when": "view == vsCMakeStatus && viewItem == statusValue_buildJobs",
          "group": "inline@1"
        },
        {
          "command": "vsCMake.test",
          "when": "view == vsCMakeStatus && viewItem == statusSection_test",
          "group": "inline@1"
        },
        {
          "command": "vsCMake.pick_test",
          "when": "view == vsCMakeStatus && viewItem == statusValue_test",
          "group": "inline@1"
        },
        {
          "command": "vsCMake.pick_testTarget",
          "when": "view == vsCMakeStatus && viewItem == statusValue_testTarget",
          "group": "inline@1"
