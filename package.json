{
  "name": "cmake-graph",
  "displayName": "Cmake Graph",
  "description": "CMake dependency explorer",
  "version": "0.1.2",
  "publisher": "aiekick",
  "engines": {
    "vscode": "^1.80.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aiekick/CMakeGraph"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/CMakeLists.txt",
    "onLanguage:cmake"
  ],
  "contributes": {
    "configuration": {
      "title": "Cmake Graph",
      "properties": {
        "CMakeGraph.buildDir": {
          "type": "string",
          "default": "${workspaceFolder}/build",
          "description": "Path to the CMake build folder"
        },
        "CMakeGraph.cmakePath": {
          "type": "string",
          "default": "cmake",
          "description": "Path to the cmake executable"
        },
        "CMakeGraph.ctestPath": {
          "type": "string",
          "default": "ctest",
          "description": "Path to the ctest executable"
        },
        "CMakeGraph.cpackPath": {
          "type": "string",
          "default": "cpack",
          "description": "Path to the cpack executable"
        },
        "CMakeGraph.clearOutputBeforeRun": {
          "type": "boolean",
          "default": true,
          "description": "Clear output before each CMake command"
        },
        "CMakeGraph.defaultJobs": {
          "type": "integer",
          "default": 0,
          "description": "Default number of jobs (0 = let CMake/CTest decide)"
        },
        "CMakeGraph.colorizeOutput": {
          "type": "boolean",
          "default": true,
          "description": "Enable syntax highlighting in the CMakeGraph output panel"
        },
        "CMakeGraph.graphEdgeDirection": {
          "type": "string",
          "enum": [
            "dependency",
            "inverse"
          ],
          "default": "dependency",
          "description": "Edge arrow direction: toward dependency or inverse"
        },
        "CMakeGraph.graphEdgeStyle": {
          "type": "string",
          "enum": [
            "tapered",
            "chevrons",
            "line"
          ],
          "default": "tapered",
          "description": "Edge rendering style in the dependency graph"
        },
        "CMakeGraph.graphTaperedWidth": {
          "type": "number",
          "default": 1.0,
          "minimum": 0.1,
          "maximum": 5.0,
          "description": "Width multiplier for tapered edges"
        },
        "CMakeGraph.graphNodeColors": {
          "type": "object",
          "default": {},
          "description": "Custom node colors by target type (e.g. {\"EXECUTABLE\": \"#FF0000\"})"
        },
        "CMakeGraph.graphSimRepulsion": {
          "type": "number",
          "default": 50000
        },
        "CMakeGraph.graphSimAttraction": {
          "type": "number",
          "default": 0.1
        },
        "CMakeGraph.graphSimGravity": {
          "type": "number",
          "default": 0.001
        },
        "CMakeGraph.graphSimLinkLength": {
          "type": "number",
          "default": 0.1
        },
        "CMakeGraph.graphSimMinDistance": {
          "type": "number",
          "default": 5000
        },
        "CMakeGraph.graphSimStepsPerFrame": {
          "type": "integer",
          "default": 5
        },
        "CMakeGraph.graphSimThreshold": {
          "type": "number",
          "default": 0.1
        },
        "CMakeGraph.graphSimDamping": {
          "type": "number",
          "default": 0.85
        },
        "CMakeGraph.graphMinimap": {
          "type": "boolean",
          "default": true,
          "description": "Show minimap on the dependency graph"
        },
        "CMakeGraph.graphAutoPauseDrag": {
          "type": "boolean",
          "default": false,
          "description": "Auto-pause simulation during node drag"
        },
        "CMakeGraph.graphSimEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable force simulation on the dependency graph"
        },
        "CMakeGraph.graphSettingsCollapse": {
          "type": "object",
          "default": {
            "edges": false,
            "colors": true,
            "simulation": true,
            "display": false,
            "controls": false
          },
          "description": "Collapsed state of settings sections (true = collapsed)"
        },
        "CMakeGraph.graphSettingsVisible": {
          "type": "boolean",
          "default": false,
          "description": "Whether the settings panel is open"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "CMakeGraph",
          "title": "CMakeGraph",
          "icon": "medias/icon.svg"
        }
      ]
    },
    "views": {
      "CMakeGraph": [
        {
          "id": "CMakeGraphOutline",
          "name": "Project Outline",
          "icon": "$(checklist)"
        },
        {
          "id": "CMakeGraphConfig",
          "name": "Configuration",
          "icon": "$(tools)"
        },
        {
          "id": "CMakeGraphImpacted",
          "name": "Impacted Targets",
          "icon": "$(target)"
        },
        {
          "id": "CMakeGraphDependencyGraph",
          "name": "Dependency Graph",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "CMakeGraph.cancelTask",
        "title": "Cancel running task",
        "category": "CMake",
        "icon": "$(stop-circle)"
      },
      {
        "command": "CMakeGraph.selectBuildDir",
        "title": "Select build folder",
        "category": "CMake",
        "icon": "$(folder-opened)"
      },
      {
        "command": "CMakeGraph.selectConfig",
        "title": "Select configuration",
        "category": "CMake",
        "icon": "$(symbol-interface)"
      },
      {
        "command": "CMakeGraph.build",
        "title": "Build",
        "category": "CMake",
        "icon": "$(build)"
      },
      {
        "command": "CMakeGraph.buildTarget",
        "title": "Build target",
        "category": "CMake",
        "icon": "$(build)"
      },
      {
        "command": "CMakeGraph.rebuildTarget",
        "title": "Rebuild target (clean + build)",
        "category": "CMake",
        "icon": "$(sync)"
      },
      {
        "command": "CMakeGraph.clean",
        "title": "Clean",
        "category": "CMake",
        "icon": "$(trash)"
      },
      {
        "command": "CMakeGraph.test",
        "title": "Test",
        "category": "CMake",
        "icon": "$(beaker)"
      },
      {
        "command": "CMakeGraph.refresh",
        "title": "Refresh all",
        "category": "CMake",
        "icon": "$(refresh)"
      },
      {
        "command": "CMakeGraph.refreshOutline",
        "title": "Refresh",
        "category": "CMake",
        "icon": "$(refresh)"
      },
      {
        "command": "CMakeGraph.refreshConfig",
        "title": "Refresh",
        "category": "CMake",
        "icon": "$(refresh)"
      },
      {
        "command": "CMakeGraph.refreshImpacted",
        "title": "Refresh",
        "category": "CMake",
        "icon": "$(refresh)"
      },
      {
        "command": "CMakeGraph.filterConfig",
        "title": "Filter variables",
        "category": "CMake",
        "icon": "$(search)"
      },
      {
        "command": "CMakeGraph.clearFilterConfig",
        "title": "Clear filter",
        "category": "CMake",
        "icon": "$(clear-all)"
      },
      {
        "command": "CMakeGraph.expandAllConfig",
        "title": "Expand all",
        "category": "CMake",
        "icon": "$(expand-all)"
      },
      {
        "command": "CMakeGraph.collapseAllConfig",
        "title": "Collapse all",
        "category": "CMake",
        "icon": "$(collapse-all)"
      },
      {
        "command": "CMakeGraph.editCacheEntry",
        "title": "Edit variable",
        "category": "CMake",
        "icon": "$(edit)"
      },
      {
        "command": "CMakeGraph.openFile",
        "title": "Open file",
        "category": "CMake",
        "icon": "$(go-to-file)"
      },
      {
        "command": "CMakeGraph.openLocation",
        "title": "Go to definition",
        "category": "CMake",
        "icon": "$(go-to-file)"
      },
      {
        "command": "CMakeGraph.copyToClipboard",
        "title": "Copy to clipboard",
        "category": "CMake",
        "icon": "$(clippy)"
      },
      {
        "command": "CMakeGraph.copySectionToClipboard",
        "title": "Copy entire section",
        "category": "CMake",
        "icon": "$(clippy)"
      },
      {
        "command": "CMakeGraph.revealDependency",
        "title": "Show in outline",
        "category": "CMake",
        "icon": "$(eye)"
      },
      {
        "command": "CMakeGraph.openSettings",
        "title": "Open the extension settings",
        "category": "CMake",
        "icon": "$(gear)"
      },
      {
        "command": "CMakeGraph.buildImpactedSection",
        "title": "Build all targets in section",
        "category": "CMake",
        "icon": "$(build)"
      },
      {
        "command": "CMakeGraph.rebuildImpactedSection",
        "title": "Rebuild all targets in section (clean + build)",
        "category": "CMake",
        "icon": "$(sync)"
      },
      {
        "command": "CMakeGraph.expandAllImpacted",
        "title": "Expand all",
        "category": "CMake",
        "icon": "$(expand-all)"
      },
      {
        "command": "CMakeGraph.collapseAllImpacted",
        "title": "Collapse all",
        "category": "CMake",
        "icon": "$(collapse-all)"
      },
      {
        "command": "CMakeGraph.filterImpacted",
        "title": "Filter targets",
        "category": "CMake",
        "icon": "$(search)"
      },
      {
        "command": "CMakeGraph.clearFilterImpacted",
        "title": "Clear filter",
        "category": "CMake",
        "icon": "$(clear-all)"
      },
      {
        "command": "CMakeGraph.filterOutline",
        "title": "Filter targets",
        "category": "CMake",
        "icon": "$(search)"
      },
      {
        "command": "CMakeGraph.clearFilterOutline",
        "title": "Clear filter",
        "category": "CMake",
        "icon": "$(clear-all)"
      },
      {
        "command": "CMakeGraph.expandAllOutline",
        "title": "Expand all",
        "category": "CMake",
        "icon": "$(expand-all)"
      },
      {
        "command": "CMakeGraph.testImpactedTarget",
        "title": "Run test",
        "category": "CMake",
        "icon": "$(beaker)"
      },
      {
        "command": "CMakeGraph.testImpactedSection",
        "title": "Run all tests in section",
        "category": "CMake",
        "icon": "$(beaker)"
      },
      {
        "command": "CMakeGraph.toggleGraphLayout",
        "title": "Toggle layout (hierarchical / force-directed)",
        "category": "CMake",
        "icon": "$(layout)"
      },
      {
        "command": "CMakeGraph.refreshDependencyGraph",
        "title": "Refresh",
        "category": "CMake",
        "icon": "$(refresh)"
      },
      {
        "command": "CMakeGraph.graphSettings",
        "title": "Graph Settings",
        "category": "CMake",
        "icon": "$(settings)"
      },
      {
        "command": "CMakeGraph.graphScreenshot",
        "title": "Screenshot Graph",
        "category": "CMake",
        "icon": "$(device-camera)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "CMakeGraph.selectBuildDir",
          "when": "view == CMakeGraphOutline",
          "group": "navigation@1"
        },
        {
          "command": "CMakeGraph.selectConfig",
          "when": "view == CMakeGraphOutline && CMakeGraph.multiConfig",
          "group": "navigation@2"
        },
        {
          "command": "CMakeGraph.filterOutline",
          "when": "view == CMakeGraphOutline",
          "group": "navigation@3"
        },
        {
          "command": "CMakeGraph.clearFilterOutline",
          "when": "view == CMakeGraphOutline && CMakeGraph.outlineFilterActive",
          "group": "navigation@4"
        },
        {
          "command": "CMakeGraph.expandAllOutline",
          "when": "view == CMakeGraphOutline",
          "group": "navigation@5"
        },
        {
          "command": "CMakeGraph.refreshOutline",
          "when": "view == CMakeGraphOutline",
          "group": "navigation@6"
        },
        {
          "command": "CMakeGraph.openSettings",
          "when": "view == CMakeGraphOutline",
          "group": "navigation@7"
        },
        {
          "command": "CMakeGraph.selectBuildDir",
          "when": "view == CMakeGraphConfig",
          "group": "navigation@1"
        },
        {
          "command": "CMakeGraph.selectConfig",
          "when": "view == CMakeGraphConfig && CMakeGraph.multiConfig",
          "group": "navigation@2"
        },
        {
          "command": "CMakeGraph.filterConfig",
          "when": "view == CMakeGraphConfig",
          "group": "navigation@3"
        },
        {
          "command": "CMakeGraph.clearFilterConfig",
          "when": "view == CMakeGraphConfig && CMakeGraph.configFilterActive",
          "group": "navigation@4"
        },
        {
          "command": "CMakeGraph.collapseAllConfig",
          "when": "view == CMakeGraphConfig",
          "group": "navigation@5"
        },
        {
          "command": "CMakeGraph.expandAllConfig",
          "when": "view == CMakeGraphConfig",
          "group": "navigation@6"
        },
        {
          "command": "CMakeGraph.refreshConfig",
          "when": "view == CMakeGraphConfig",
          "group": "navigation@7"
        },
        {
          "command": "CMakeGraph.openSettings",
          "when": "view == CMakeGraphConfig",
          "group": "navigation@8"
        },
        {
          "command": "CMakeGraph.selectBuildDir",
          "when": "view == CMakeGraphImpacted",
          "group": "navigation@1"
        },
        {
          "command": "CMakeGraph.selectConfig",
          "when": "view == CMakeGraphImpacted && CMakeGraph.multiConfig",
          "group": "navigation@2"
        },
        {
          "command": "CMakeGraph.filterImpacted",
          "when": "view == CMakeGraphImpacted",
          "group": "navigation@3"
        },
        {
          "command": "CMakeGraph.clearFilterImpacted",
          "when": "view == CMakeGraphImpacted && CMakeGraph.impactedFilterActive",
          "group": "navigation@4"
        },
        {
          "command": "CMakeGraph.expandAllImpacted",
          "when": "view == CMakeGraphImpacted",
          "group": "navigation@5"
        },
        {
          "command": "CMakeGraph.collapseAllImpacted",
          "when": "view == CMakeGraphImpacted",
          "group": "navigation@6"
        },
        {
          "command": "CMakeGraph.refreshImpacted",
          "when": "view == CMakeGraphImpacted",
          "group": "navigation@7"
        },
        {
          "command": "CMakeGraph.openSettings",
          "when": "view == CMakeGraphImpacted",
          "group": "navigation@8"
        },
        {
          "command": "CMakeGraph.refreshDependencyGraph",
          "when": "view == CMakeGraphDependencyGraph",
          "group": "navigation@1"
        },
        {
          "command": "CMakeGraph.graphSettings",
          "when": "view == CMakeGraphDependencyGraph",
          "group": "navigation@2"
        },
        {
          "command": "CMakeGraph.graphScreenshot",
          "when": "view == CMakeGraphDependencyGraph",
          "group": "navigation@3"
        },
        {
          "command": "CMakeGraph.openSettings",
          "when": "view == CMakeGraphDependencyGraph",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "CMakeGraph.buildTarget",
          "when": "view == CMakeGraphOutline && viewItem =~ /^outlineTarget_/",
          "group": "inline@1"
        },
        {
          "command": "CMakeGraph.rebuildTarget",
          "when": "view == CMakeGraphOutline && viewItem =~ /^outlineTarget_/",
          "group": "inline@2"
        },
        {
          "command": "CMakeGraph.buildImpactedSection",
          "when": "view == CMakeGraphImpacted && viewItem =~ /^impactedSection_(libraries|executables|tests)/",
          "group": "inline@1"
        },
        {
          "command": "CMakeGraph.rebuildImpactedSection",
          "when": "view == CMakeGraphImpacted && viewItem =~ /^impactedSection_(libraries|executables|tests)/",
          "group": "inline@2"
        },
        {
          "command": "CMakeGraph.testImpactedSection",
          "when": "view == CMakeGraphImpacted && viewItem =~ /^impactedSection_(executables|tests)/",
          "group": "inline@3"
        },
        {
          "command": "CMakeGraph.buildTarget",
          "when": "view == CMakeGraphImpacted && viewItem =~ /^impactedTarget_/",
          "group": "inline@1"
        },
        {
          "command": "CMakeGraph.rebuildTarget",
          "when": "view == CMakeGraphImpacted && viewItem =~ /^impactedTarget_/",
          "group": "inline@2"
        },
        {
          "command": "CMakeGraph.testImpactedTarget",
          "when": "view == CMakeGraphImpacted && viewItem =~ /^impactedTarget_(EXECUTABLE|TEST)/",
          "group": "inline@3"
        },
        {
          "command": "CMakeGraph.editCacheEntry",
          "when": "view == CMakeGraphConfig && viewItem == cmakeCacheEntry",
          "group": "inline@1"
        },
        {
          "command": "CMakeGraph.copyToClipboard",
          "when": "view == CMakeGraphOutline && viewItem == outlineCopyable",
          "group": "1_copy@1"
        },
        {
          "command": "CMakeGraph.copySectionToClipboard",
          "when": "view == CMakeGraphOutline && viewItem =~ /^outlineExtras_/",
          "group": "1_copy@1"
        },
        {
          "command": "CMakeGraph.copyToClipboard",
          "when": "view == CMakeGraphOutline && viewItem == outlineDependency",
          "group": "1_copy@1"
        },
        {
          "command": "CMakeGraph.revealDependency",
          "when": "view == CMakeGraphOutline && viewItem == outlineDependency",
          "group": "2_nav@1"
        },
        {
          "command": "CMakeGraph.filterOutline",
          "when": "view == CMakeGraphOutline && viewItem =~ /^outlineFilter/",
          "group": "inline@1"
        },
        {
          "command": "CMakeGraph.clearFilterOutline",
          "when": "view == CMakeGraphOutline && viewItem == outlineFilterActive",
          "group": "inline@2"
        },
        {
          "command": "CMakeGraph.filterImpacted",
          "when": "view == CMakeGraphImpacted && viewItem =~ /^impactedFilter/",
          "group": "inline@1"
        },
        {
          "command": "CMakeGraph.clearFilterImpacted",
          "when": "view == CMakeGraphImpacted && viewItem == impactedFilterActive",
          "group": "inline@2"
        },
        {
          "command": "CMakeGraph.filterConfig",
          "when": "view == CMakeGraphConfig && viewItem =~ /^cmakeCacheFilter/",
          "group": "inline@1"
        },
        {
          "command": "CMakeGraph.clearFilterConfig",
          "when": "view == CMakeGraphConfig && viewItem == cmakeCacheFilterActive",
          "group": "inline@2"
        }
      ]
    },
    "keybindings": [
      {
        "command": "CMakeGraph.build",
        "key": "ctrl+F7"
      }
    ],
    "languages": [
      {
        "id": "vscmake-output",
        "mimetypes": [
          "text/x-vscmake-output"
        ]
      }
    ],
    "grammars": [
      {
        "language": "vscmake-output",
        "scopeName": "source.vscmake-output",
        "path": "./syntaxes/output_coloration.tmLanguage.json"
      }
    ]
  },
  "main": "./out/extension.js",
  "scripts": {
    "check": "tsc --noEmit",
    "compile": "tsc -p ./",
    "package": "rm -rf out && node ./scripts/esbuild.js && node ./scripts/package.js",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vis-data": "^8.0.3",
    "vis-network": "^10.0.2",
    "vscode-cmake-tools": "^1.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "archiver": "^7.0.1",
    "esbuild": "^0.27.3",
    "typescript": "^5.9.3"
  }
}