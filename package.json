          "when": "view == vsCMakeStatus && viewItem == statusSection_package",
          "group": "inline@1"
        },
        {
          "command": "vsCMake.pick_package",
          "when": "view == vsCMakeStatus && viewItem == statusValue_package",
          "group": "inline@1"
        },
        {
          "command": "vsCMake.debug",
          "when": "view == vsCMakeStatus && viewItem == statusSection_debug",
          "group": "inline@1"
        },
        {
          "command": "vsCMake.pick_debug",
          "when": "view == vsCMakeStatus && viewItem == statusValue_debug",
          "group": "inline@1"
        },
        {
          "command": "vsCMake.launch",
          "when": "view == vsCMakeStatus && viewItem == statusSection_launch",
          "group": "inline@1"
