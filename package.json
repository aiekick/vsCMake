{
  "name": "vscmake",
  "displayName": "vsCMake",
  "description": "CMake build explorer via CMake file Api. Build, test and browse your CMake projects directly from VSCode.",
  "version": "0.1.1",
  "publisher": "aiekick",
  "engines": {
    "vscode": "^1.80.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aiekick/vsCMake"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/CMakeLists.txt",
    "onLanguage:cmake"
  ],
  "contributes": {
    "configuration": {
      "title": "vsCMake",
      "properties": {
        "vsCMake.buildDir": {
          "type": "string",
          "default": "${workspaceFolder}/build",
          "description": "Path to the CMake build folder"
        },
        "vsCMake.cmakePath": {
          "type": "string",
          "default": "cmake",
          "description": "Path to the cmake executable"
        },
        "vsCMake.ctestPath": {
          "type": "string",
          "default": "ctest",
          "description": "Path to the ctest executable"
        },
        "vsCMake.cpackPath": {
          "type": "string",
          "default": "cpack",
          "description": "Path to the cpack executable"
        },
        "vsCMake.clearOutputBeforeRun": {
          "type": "boolean",
          "default": true,
          "description": "Clear output before each CMake command"
        },
        "vsCMake.defaultJobs": {
          "type": "integer",
          "default": 0,
          "description": "Default number of jobs (0 = let CMake/CTest decide)"
        },
        "vsCMake.colorizeOutput": {
          "type": "boolean",
          "default": true,
          "description": "Enable syntax highlighting in the vsCMake output panel"
        },
        "vsCMake.graphEdgeDirection": {
          "type": "string",
          "enum": [
            "dependency",
            "inverse"
          ],
          "default": "dependency",
          "description": "Edge arrow direction: toward dependency or inverse"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vsCMake",
          "title": "vsCMake",
          "icon": "medias/icon.svg"
        }
      ]
    },
    "views": {
      "vsCMake": [
        {
          "id": "vsCMakeOutline",
          "name": "Project Outline",
          "icon": "$(checklist)"
        },
        {
          "id": "vsCMakeConfig",
          "name": "Configuration",
          "icon": "$(tools)"
        },
        {
          "id": "vsCMakeImpacted",
          "name": "Impacted Targets",
          "icon": "$(target)"
        },
        {
          "id": "vsCMakeDependencyGraph",
          "name": "Dependency Graph",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "vsCMake.cancelTask",
        "title": "Cancel running task",
        "category": "CMake",
        "icon": "$(stop-circle)"
      },
      {
        "command": "vsCMake.selectBuildDir",
        "title": "Select build folder",
        "category": "CMake",
        "icon": "$(folder-opened)"
      },
      {
        "command": "vsCMake.selectConfig",
        "title": "Select configuration",
        "category": "CMake",
        "icon": "$(symbol-interface)"
      },
      {
        "command": "vsCMake.build",
        "title": "Build",
        "category": "CMake",
        "icon": "$(build)"
      },
      {
        "command": "vsCMake.buildTarget",
        "title": "Build target",
        "category": "CMake",
        "icon": "$(build)"
      },
      {
        "command": "vsCMake.rebuildTarget",
        "title": "Rebuild target (clean + build)",
        "category": "CMake",
        "icon": "$(sync)"
      },
      {
        "command": "vsCMake.clean",
        "title": "Clean",
        "category": "CMake",
        "icon": "$(trash)"
      },
      {
        "command": "vsCMake.test",
        "title": "Test",
        "category": "CMake",
        "icon": "$(beaker)"
      },
      {
        "command": "vsCMake.refresh",
        "title": "Refresh all",
        "category": "CMake",
        "icon": "$(refresh)"
      },
      {
        "command": "vsCMake.refreshOutline",
        "title": "Refresh",
        "category": "CMake",
        "icon": "$(refresh)"
      },
      {
        "command": "vsCMake.refreshConfig",
        "title": "Refresh",
        "category": "CMake",
        "icon": "$(refresh)"
      },
      {
        "command": "vsCMake.refreshImpacted",
        "title": "Refresh",
        "category": "CMake",
        "icon": "$(refresh)"
      },
      {
        "command": "vsCMake.filterConfig",
        "title": "Filter variables",
        "category": "CMake",
        "icon": "$(search)"
      },
      {
        "command": "vsCMake.clearFilterConfig",
        "title": "Clear filter",
        "category": "CMake",
        "icon": "$(clear-all)"
      },
      {
        "command": "vsCMake.expandAllConfig",
        "title": "Expand all",
        "category": "CMake",
        "icon": "$(expand-all)"
      },
      {
        "command": "vsCMake.collapseAllConfig",
        "title": "Collapse all",
        "category": "CMake",
        "icon": "$(collapse-all)"
      },
      {
        "command": "vsCMake.editCacheEntry",
        "title": "Edit variable",
        "category": "CMake",
        "icon": "$(edit)"
      },
      {
        "command": "vsCMake.openFile",
        "title": "Open file",
        "category": "CMake",
        "icon": "$(go-to-file)"
      },
      {
        "command": "vsCMake.openLocation",
        "title": "Go to definition",
        "category": "CMake",
        "icon": "$(go-to-file)"
      },
      {
        "command": "vsCMake.copyToClipboard",
        "title": "Copy to clipboard",
        "category": "CMake",
        "icon": "$(clippy)"
      },
      {
        "command": "vsCMake.copySectionToClipboard",
        "title": "Copy entire section",
        "category": "CMake",
        "icon": "$(clippy)"
      },
      {
        "command": "vsCMake.revealDependency",
        "title": "Show in outline",
        "category": "CMake",
        "icon": "$(eye)"
      },
      {
        "command": "vsCMake.openSettings",
        "title": "Open the extension settings",
        "category": "CMake",
        "icon": "$(gear)"
      },
      {
        "command": "vsCMake.buildImpactedSection",
        "title": "Build all targets in section",
        "category": "CMake",
        "icon": "$(build)"
      },
      {
        "command": "vsCMake.rebuildImpactedSection",
        "title": "Rebuild all targets in section (clean + build)",
        "category": "CMake",
        "icon": "$(sync)"
      },
      {
        "command": "vsCMake.expandAllImpacted",
        "title": "Expand all",
        "category": "CMake",
        "icon": "$(expand-all)"
      },
      {
        "command": "vsCMake.collapseAllImpacted",
        "title": "Collapse all",
        "category": "CMake",
        "icon": "$(collapse-all)"
      },
      {
        "command": "vsCMake.filterImpacted",
        "title": "Filter targets",
        "category": "CMake",
        "icon": "$(search)"
      },
      {
        "command": "vsCMake.clearFilterImpacted",
        "title": "Clear filter",
        "category": "CMake",
        "icon": "$(clear-all)"
      },
      {
        "command": "vsCMake.filterOutline",
        "title": "Filter targets",
        "category": "CMake",
        "icon": "$(search)"
      },
      {
        "command": "vsCMake.clearFilterOutline",
        "title": "Clear filter",
        "category": "CMake",
        "icon": "$(clear-all)"
      },
      {
        "command": "vsCMake.expandAllOutline",
        "title": "Expand all",
        "category": "CMake",
        "icon": "$(expand-all)"
      },
      {
        "command": "vsCMake.testImpactedTarget",
        "title": "Run test",
        "category": "CMake",
        "icon": "$(beaker)"
      },
      {
        "command": "vsCMake.testImpactedSection",
        "title": "Run all tests in section",
        "category": "CMake",
        "icon": "$(beaker)"
      },
      {
        "command": "vsCMake.toggleGraphLayout",
        "title": "Toggle layout (hierarchical / force-directed)",
        "category": "CMake",
        "icon": "$(layout)"
      },
      {
        "command": "vsCMake.refreshDependencyGraph",
        "title": "Refresh",
        "category": "CMake",
        "icon": "$(refresh)"
      },
      {
        "command": "vsCMake.graphSettings",
        "title": "Graph Settings",
        "category": "CMake",
        "icon": "$(gear)"
      },
      {
        "command": "vsCMake.graphScreenshot",
        "title": "Screenshot Graph",
        "category": "CMake",
        "icon": "$(device-camera)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "vsCMake.selectBuildDir",
          "when": "view == vsCMakeOutline",
          "group": "navigation@1"
        },
        {
          "command": "vsCMake.selectConfig",
          "when": "view == vsCMakeOutline && vsCMake.multiConfig",
          "group": "navigation@2"
        },
        {
          "command": "vsCMake.filterOutline",
          "when": "view == vsCMakeOutline",
          "group": "navigation@3"
        },
        {
          "command": "vsCMake.clearFilterOutline",
          "when": "view == vsCMakeOutline && vsCMake.outlineFilterActive",
          "group": "navigation@4"
        },
        {
          "command": "vsCMake.expandAllOutline",
          "when": "view == vsCMakeOutline",
          "group": "navigation@5"
        },
        {
          "command": "vsCMake.refreshOutline",
          "when": "view == vsCMakeOutline",
          "group": "navigation@6"
        },
        {
          "command": "vsCMake.openSettings",
          "when": "view == vsCMakeOutline",
          "group": "navigation@7"
        },
        {
          "command": "vsCMake.selectBuildDir",
          "when": "view == vsCMakeConfig",
          "group": "navigation@1"
        },
        {
          "command": "vsCMake.selectConfig",
          "when": "view == vsCMakeConfig && vsCMake.multiConfig",
          "group": "navigation@2"
        },
        {
          "command": "vsCMake.filterConfig",
          "when": "view == vsCMakeConfig",
          "group": "navigation@3"
        },
        {
          "command": "vsCMake.clearFilterConfig",
          "when": "view == vsCMakeConfig && vsCMake.configFilterActive",
          "group": "navigation@4"
        },
        {
          "command": "vsCMake.collapseAllConfig",
          "when": "view == vsCMakeConfig",
          "group": "navigation@5"
        },
        {
          "command": "vsCMake.expandAllConfig",
          "when": "view == vsCMakeConfig",
          "group": "navigation@6"
        },
        {
          "command": "vsCMake.refreshConfig",
          "when": "view == vsCMakeConfig",
          "group": "navigation@7"
        },
        {
          "command": "vsCMake.openSettings",
          "when": "view == vsCMakeConfig",
          "group": "navigation@8"
        },
        {
          "command": "vsCMake.selectBuildDir",
          "when": "view == vsCMakeImpacted",
          "group": "navigation@1"
        },
        {
          "command": "vsCMake.selectConfig",
          "when": "view == vsCMakeImpacted && vsCMake.multiConfig",
          "group": "navigation@2"
        },
        {
          "command": "vsCMake.filterImpacted",
          "when": "view == vsCMakeImpacted",
          "group": "navigation@3"
        },
        {
          "command": "vsCMake.clearFilterImpacted",
          "when": "view == vsCMakeImpacted && vsCMake.impactedFilterActive",
          "group": "navigation@4"
        },
        {
          "command": "vsCMake.expandAllImpacted",
          "when": "view == vsCMakeImpacted",
          "group": "navigation@5"
        },
        {
          "command": "vsCMake.collapseAllImpacted",
          "when": "view == vsCMakeImpacted",
          "group": "navigation@6"
        },
        {
          "command": "vsCMake.refreshImpacted",
          "when": "view == vsCMakeImpacted",
          "group": "navigation@7"
        },
        {
          "command": "vsCMake.openSettings",
          "when": "view == vsCMakeImpacted",
          "group": "navigation@8"
        },
        {
          "command": "vsCMake.refreshDependencyGraph",
          "when": "view == vsCMakeDependencyGraph",
          "group": "navigation@1"
        },
        {
          "command": "vsCMake.graphSettings",
          "when": "view == vsCMakeDependencyGraph",
          "group": "1_graph@1"
        },
        {
          "command": "vsCMake.graphScreenshot",
          "when": "view == vsCMakeDependencyGraph",
          "group": "1_graph@2"
        },
        {
          "command": "vsCMake.openSettings",
          "when": "view == vsCMakeDependencyGraph",
          "group": "2_settings@1"
        }
      ],
      "view/item/context": [
        {
          "command": "vsCMake.buildTarget",
          "when": "view == vsCMakeOutline && viewItem =~ /^outlineTarget_/",
          "group": "inline@1"
        },
        {
          "command": "vsCMake.rebuildTarget",
          "when": "view == vsCMakeOutline && viewItem =~ /^outlineTarget_/",
          "group": "inline@2"
        },
        {
          "command": "vsCMake.buildImpactedSection",
          "when": "view == vsCMakeImpacted && viewItem =~ /^impactedSection_(libraries|executables|tests)/",
          "group": "inline@1"
        },
        {
          "command": "vsCMake.rebuildImpactedSection",
          "when": "view == vsCMakeImpacted && viewItem =~ /^impactedSection_(libraries|executables|tests)/",
          "group": "inline@2"
        },
        {
          "command": "vsCMake.testImpactedSection",
          "when": "view == vsCMakeImpacted && viewItem =~ /^impactedSection_(executables|tests)/",
          "group": "inline@3"
        },
        {
          "command": "vsCMake.buildTarget",
          "when": "view == vsCMakeImpacted && viewItem =~ /^impactedTarget_/",
          "group": "inline@1"
        },
        {
          "command": "vsCMake.rebuildTarget",
          "when": "view == vsCMakeImpacted && viewItem =~ /^impactedTarget_/",
          "group": "inline@2"
        },
        {
          "command": "vsCMake.testImpactedTarget",
          "when": "view == vsCMakeImpacted && viewItem =~ /^impactedTarget_(EXECUTABLE|TEST)/",
          "group": "inline@3"
        },
        {
          "command": "vsCMake.editCacheEntry",
          "when": "view == vsCMakeConfig && viewItem == cmakeCacheEntry",
          "group": "inline@1"
        },
        {
          "command": "vsCMake.copyToClipboard",
          "when": "view == vsCMakeOutline && viewItem == outlineCopyable",
          "group": "1_copy@1"
        },
        {
          "command": "vsCMake.copySectionToClipboard",
          "when": "view == vsCMakeOutline && viewItem =~ /^outlineExtras_/",
          "group": "1_copy@1"
        },
        {
          "command": "vsCMake.copyToClipboard",
          "when": "view == vsCMakeOutline && viewItem == outlineDependency",
          "group": "1_copy@1"
        },
        {
          "command": "vsCMake.revealDependency",
          "when": "view == vsCMakeOutline && viewItem == outlineDependency",
          "group": "2_nav@1"
        },
        {
          "command": "vsCMake.filterOutline",
          "when": "view == vsCMakeOutline && viewItem =~ /^outlineFilter/",
          "group": "inline@1"
        },
        {
          "command": "vsCMake.clearFilterOutline",
          "when": "view == vsCMakeOutline && viewItem == outlineFilterActive",
          "group": "inline@2"
        },
        {
          "command": "vsCMake.filterImpacted",
          "when": "view == vsCMakeImpacted && viewItem =~ /^impactedFilter/",
          "group": "inline@1"
        },
        {
          "command": "vsCMake.clearFilterImpacted",
          "when": "view == vsCMakeImpacted && viewItem == impactedFilterActive",
          "group": "inline@2"
        },
        {
          "command": "vsCMake.filterConfig",
          "when": "view == vsCMakeConfig && viewItem =~ /^cmakeCacheFilter/",
          "group": "inline@1"
        },
        {
          "command": "vsCMake.clearFilterConfig",
          "when": "view == vsCMakeConfig && viewItem == cmakeCacheFilterActive",
          "group": "inline@2"
        }
      ]
    },
    "keybindings": [
      {
        "command": "vsCMake.build",
        "key": "ctrl+F7"
      }
    ],
    "languages": [
      {
        "id": "vscmake-output",
        "mimetypes": [
          "text/x-vscmake-output"
        ]
      }
    ],
    "grammars": [
      {
        "language": "vscmake-output",
        "scopeName": "source.vscmake-output",
        "path": "./syntaxes/output_coloration.tmLanguage.json"
      }
    ]
  },
  "main": "./out/extension.js",
  "scripts": {
    "check": "tsc --noEmit",
    "compile": "tsc -p ./",
    "package": "rm -rf out && node ./scripts/esbuild.js && node ./scripts/package.js",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vis-data": "^8.0.3",
    "vis-network": "^10.0.2",
    "vscode-cmake-tools": "^1.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "archiver": "^7.0.1",
    "esbuild": "^0.27.3",
    "typescript": "^5.9.3"
  }
}