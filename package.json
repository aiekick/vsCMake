{
  "name": "vscmake",
  "displayName": "vsCMake",
  "description": "CMake integration via CMake file Api. Configure, build, test and debug your CMake projects directly from VSCode.",
  "version": "0.1.0",
  "publisher": "aiekick",
  "engines": {
    "vscode": "^1.80.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aiekick/vsCMake"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/CMakeLists.txt",
    "onLanguage:cmake"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "check": "tsc --noEmit",
    "package": "node ./scripts/package.js"
  },
  "contributes": {
    "configuration": {
      "title": "vsCMake",
      "properties": {
        "vsCMake.sourceDir": {
          "type": "string",
          "default": "${workspaceFolder}",
          "description": "Path to the CMake source folder"
        },
        "vsCMake.buildDir": {
          "type": "string",
          "default": "${workspaceFolder}/build",
          "description": "Path to the CMake build folder"
        },
        "vsCMake.cmakePath": {
          "type": "string",
          "default": "cmake",
          "description": "Path to the cmake executable"
        },
        "vsCMake.ctestPath": {
          "type": "string",
          "default": "ctest",
          "description": "Path to the ctest executable"
        },
        "vsCMake.cpackPath": {
          "type": "string",
          "default": "cpack",
          "description": "Path to the cpack executable"
        },
        "vsCMake.preventInSourceBuild": {
          "type": "boolean",
          "default": true,
          "description": "Prevent configuring when the build directory is the same as the source directory (in-source build)"
        },
        "vsCMake.clearOutputBeforeRun": {
          "type": "boolean",
          "default": true,
          "description": "Clear output before each CMake command"
        },
        "vsCMake.showJobsOption": {
          "type": "boolean",
          "default": false,
          "description": "Show Jobs option (parallelism) in Build and Test sections"
        },
        "vsCMake.defaultJobs": {
          "type": "integer",
          "default": 0,
          "description": "Default number of jobs (0 = let CMake/CTest decide)"
        },
        "vsCMake.colorizeOutput": {
          "type": "boolean",
          "default": true,
          "description": "Enable syntax highlighting in the vsCMake output panel"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vsCMake",
          "title": "vsCMake",
          "icon": "images/icon.svg"
        }
      ]
    },
    "views": {
      "vsCMake": [
        {
          "id": "vsCMakeStatus",
          "name": "Project Status",
          "icon": "$(project)"
        },
        {
          "id": "vsCMakeOutline",
          "name": "Project Outline",
          "icon": "$(checklist)"
        },
        {
          "id": "vsCMakeConfig",
          "name": "Configuration",
          "icon": "$(tools)"
        },
        {
          "id": "vsCMakeImpacted",
          "name": "Impacted Targets",
          "icon": "$(target)"
        }
      ]
    },
