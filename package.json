        {
          "command": "vsCMake.pick_launch",
          "when": "view == vsCMakeStatus && viewItem == statusValue_launch",
          "group": "inline@1"
        },
        {
          "command": "vsCMake.buildTarget",
          "when": "view == vsCMakeOutline && viewItem =~ /^outlineTarget_/",
          "group": "inline@1"
        },
        {
          "command": "vsCMake.rebuildTarget",
          "when": "view == vsCMakeOutline && viewItem =~ /^outlineTarget_/",
          "group": "inline@2"
        },
        {
          "command": "vsCMake.buildImpactedSection",
          "when": "view == vsCMakeImpacted && viewItem =~ /^impactedSection_(libraries|executables|tests)/",
          "group": "inline@1"
        },
        {
          "command": "vsCMake.rebuildImpactedSection",
          "when": "view == vsCMakeImpacted && viewItem =~ /^impactedSection_(libraries|executables|tests)/",
          "group": "inline@2"
        },
        {
          "command": "vsCMake.testImpactedSection",
          "when": "view == vsCMakeImpacted && viewItem =~ /^impactedSection_(executables|tests)/",
          "group": "inline@3"
        },
        {
          "command": "vsCMake.buildTarget",
          "when": "view == vsCMakeImpacted && viewItem =~ /^impactedTarget_/",
          "group": "inline@1"
        },
        {
          "command": "vsCMake.rebuildTarget",
          "when": "view == vsCMakeImpacted && viewItem =~ /^impactedTarget_/",
          "group": "inline@2"
        },
        {
          "command": "vsCMake.testImpactedTarget",
          "when": "view == vsCMakeImpacted && viewItem =~ /^impactedTarget_(EXECUTABLE|TEST)/",
          "group": "inline@3"
        },
        {
          "command": "vsCMake.editCacheEntry",
          "when": "view == vsCMakeConfig && viewItem == cmakeCacheEntry",
          "group": "inline@1"
        },
        {
          "command": "vsCMake.copyToClipboard",
          "when": "view == vsCMakeOutline && viewItem == outlineCopyable",
          "group": "1_copy@1"
        },
        {
          "command": "vsCMake.copySectionToClipboard",
          "when": "view == vsCMakeOutline && viewItem =~ /^outlineExtras_/",
          "group": "1_copy@1"
        },
        {
          "command": "vsCMake.copyToClipboard",
          "when": "view == vsCMakeOutline && viewItem == outlineDependency",
          "group": "1_copy@1"
        },
        {
          "command": "vsCMake.revealDependency",
          "when": "view == vsCMakeOutline && viewItem == outlineDependency",
          "group": "2_nav@1"
        },
        {
          "command": "vsCMake.filterOutline",
          "when": "view == vsCMakeOutline && viewItem =~ /^outlineFilter/",
          "group": "inline@1"
        },
        {
          "command": "vsCMake.clearFilterOutline",
          "when": "view == vsCMakeOutline && viewItem == outlineFilterActive",
          "group": "inline@2"
        },
        {
          "command": "vsCMake.filterImpacted",
          "when": "view == vsCMakeImpacted && viewItem =~ /^impactedFilter/",
          "group": "inline@1"
        },
        {
          "command": "vsCMake.clearFilterImpacted",
          "when": "view == vsCMakeImpacted && viewItem == impactedFilterActive",
          "group": "inline@2"
        },
        {
          "command": "vsCMake.filterConfig",
          "when": "view == vsCMakeConfig && viewItem =~ /^cmakeCacheFilter/",
          "group": "inline@1"
        },
        {
          "command": "vsCMake.clearFilterConfig",
          "when": "view == vsCMakeConfig && viewItem == cmakeCacheFilterActive",
          "group": "inline@2"
        },
        {
          "command": "vsCMake.pick_kit",
          "when": "view == vsCMakeStatus && viewItem == statusValue_kitName",
          "group": "inline@1"
        }
      ]
    },
    "keybindings": [
      {
        "command": "vsCMake.configure",
        "key": "ctrl+shift+F7"
      },
      {
        "command": "vsCMake.build",
        "key": "ctrl+F7"
      }
    ],
    "languages": [
      {
        "id": "vscmake-output",
        "mimetypes": [
          "text/x-vscmake-output"
        ]
      }
    ],
    "grammars": [
      {
        "language": "vscmake-output",
        "scopeName": "source.vscmake-output",
        "path": "./syntaxes/output_coloration.tmLanguage.json"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.109.0",
    "archiver": "^7.0.1",
    "typescript": "^5.9.3"
  }
}
